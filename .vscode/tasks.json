{	
    "version": "2.0.0",	
    "tasks": [	
        {	
            "label": "Compilar Minishell",	
            "type": "shell",	
            "command": "make",	
            "args": [	
                "all"	
            ],	
            "group": "build",	
            "problemMatcher": [	
                "$gcc"	
            ],	
            "detail": "Compila o projeto usando o Makefile"	
        },	
        {	
            "label": "Limpar Compilação",	
            "type": "shell",	
            "command": "make",	
            "args": [	
                "fclean"	
            ],	
            "group": "build",	
            "problemMatcher": []	
        },	
        {	
            "label": "Recompilar Minishell",	
            "type": "shell",	
            "command": "make",	
            "args": [	
                "re"	
            ],	
            "group": "build",	
            "problemMatcher": [],	
            "detail": "Recompila o projeto"	
        },	
        {	
            "type": "cppbuild",	
            "label": "C/C++: gcc arquivo de build ativo",	
            "command": "/usr/bin/gcc",	
            "args": [	
                "-fdiagnostics-color=always",	
                "-g",	
                "${file}",	
                "-o",	
                "${fileDirname}/${fileBasenameNoExtension}"	
            ],	
            "options": {	
                "cwd": "${fileDirname}"	
            },	
            "problemMatcher": [	
                "$gcc"	
            ],	
            "group": {	
                "kind": "build",	
                "isDefault": true	
            },	
            "detail": "Tarefa gerada pelo Depurador."	
        }	
    ]	
}